{
  "name": "nem-coinbase-token-sale-api",
  "version": "1.0.0",
  "description": "NEM Coinbase Token Sale API",
  "repository": {
    "type": "git",
    "url": "https://github.com/blockstart/nem-coinbase-token-sale-api"
  },
  "author": "Jack Davis, Jacob Luetzow, Mark Price",
  "scripts": {
    "start": "npm run build && NODE_ENV=production pm2 start ./dist/bundle.js --name api-token-production",
    "build": "rm -rf ./dist && npx webpack --env.NODE_ENV=production --config webpack.config.js",
    "build-local": "rm -rf ./dist && npx webpack --env.NODE_ENV=localdev --config webpack.config.js",
    "build-dev": "rm -rf ./dist && npx webpack --env.NODE_ENV=development --config webpack.config.js",
    "build-staging": "rm -rf ./dist && npx webpack --env.NODE_ENV=staging --config webpack.config.js",
    "test": "NODE_ENV=test mocha-webpack --recursive --glob \"*.test.ts\" --watch test",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "localdev": "NODE_ENV=localdev npm run build-local",
    "dev": "NODE_ENV=development npm run build-dev && NODE_ENV=development pm2 start ./dist/bundle.js --name api-token-develop",
    "staging": "NODE_ENV=staging npm run build-staging && NODE_ENV=staging pm2 start ./dist/bundle.js --name api-token-staging"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "body-parser": "^1.15.2",
    "compression": "^1.7.1",
    "cors": "^2.8.0",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "express-form-data": "^2.0.6",
    "express-session": "^1.14.2",
    "express-validator": "^4.3.0",
    "extend": "^3.0.0",
    "mongodb": "^2.2.33",
    "morgan": "^1.7.0",
    "nem-library": "^1.0.4",
    "nem-sdk": "^1.6.6",
    "nodemailer": "^4.4.1",
    "nodemon": "^1.17.5",
    "rxjs": "^5.5.7"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.18",
    "@types/body-parser": "^1.16.8",
    "@types/chai": "^4.1.2",
    "@types/chai-as-promised": "^7.1.0",
    "@types/chai-http": "^3.0.3",
    "@types/compression": "0.0.35",
    "@types/connect-mongo": "0.0.34",
    "@types/cors": "^2.8.3",
    "@types/dateformat": "^1.0.1",
    "@types/debug": "0.0.30",
    "@types/dotenv": "^4.0.2",
    "@types/express": "^4.11.1",
    "@types/express-jwt": "0.0.38",
    "@types/express-session": "1.15.6",
    "@types/extend": "^3.0.0",
    "@types/istanbul": "^0.4.29",
    "@types/jsonwebtoken": "^7.2.3",
    "@types/lodash": "^4.14.63",
    "@types/mocha": "^2.2.47",
    "@types/mongodb": "^2.1.43",
    "@types/morgan": "^1.7.32",
    "@types/node": "^8.0.53",
    "@types/nodemailer": "^4.3.1",
    "@types/sinon": "^4.0.0",
    "@types/sinon-chai": "^2.7.29",
    "@types/stripe": "^5.0.1",
    "@types/supertest": "^2.0.4",
    "@types/validator": "^6.3.0",
    "@types/webpack": "^3.8.2",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^3.0.0",
    "mocha": "^4.0.1",
    "mocha-webpack": "^1.0.1",
    "mocha-typescript": "^1.1.12",
    "ts-loader": "^3.2.0",
    "tsconfig-paths-webpack-plugin": "^2.0.0",
    "tslint": "^5.9.1",
    "tslint-loader": "^3.5.3",
    "typescript": "^2.8.3",
    "webpack": "^3.10.0",
    "webpack-env": "^0.8.0",
    "webpack-node-externals": "^1.6.0",
    "webpack-shell-plugin": "^0.5.0"
  }
